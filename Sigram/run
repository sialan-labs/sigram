# /bin/sh

RUN_FILE=`readlink "$0"`
if [ "${RUN_FILE}" = "" ]; then
    RUN_FILE="$0"
fi
if [ "${SIALAN_DATA_PATH}" = "" ]; then
    SIALAN_DATA_PATH="`echo $RUN_FILE | grep ^/`"
    if [ "$SIALAN_DATA_PATH" = "" ]; then
	SIALAN_DATA_PATH="$PWD"/"$RUN_FILE"
    fi
    DIR="$PWD"
    DIR_NAME=`dirname "$SIALAN_DATA_PATH"`
    cd "$DIR_NAME"
    SIALAN_DATA_PATH="$PWD"
fi

export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$SIALAN_DATA_PATH"
"$SIALAN_DATA_PATH/Sigram" "$@"
